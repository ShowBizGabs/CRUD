<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="5dp">
    <TextView
        android:id="@+id/text_mahasiswa_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="1dp"/>

    <TextView
        android:id="@+id/text_nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/text_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666"
        android:layout_below="@+id/text_nim"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/text_tgl_lahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/text_nama"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/text_prodi_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/text_nama"
        android:layout_toRightOf="@+id/text_nama"
        android:textSize="12dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/text_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_below="@+id/text_tgl_lahir"
        android:textSize="12dp"/>

</RelativeLayout>